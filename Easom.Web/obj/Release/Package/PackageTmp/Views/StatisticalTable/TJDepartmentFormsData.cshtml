                                        <th colspan="3">
                                            今天
                                        </th>
                                        <th colspan="3">
                                            本月
                                        </th>
                                        <th colspan="3">
                                            上月
                                        </th>
                                        <th colspan="3">
                                            上上月
                                        </th>
                                        <th colspan="2">
                                            月差比
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="oth"></tbody>

                            </table>
                        </div>
                        <!-- table-responsive -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


